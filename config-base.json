{
  "listener": {
    "port": 8080
  },
  "express": {
    "trust proxy": "loopback",
    "x-powered-by": null
  },
  "patchHeaders": {
    "root": {
      "static": {
        "Access-Control-Allow-Origin": "*",
        "Cache-Control": "public, max-age=120",
        "Vary": "Accept"
      }
    }
  },
  "staticFiles": {
    "trifidFiles": {
      "path": "/",
      "folder": "cwd:public"
    },
    "rendererFiles": {
      "path": "/",
      "folder": "cwd:node_modules/trifid-renderer-simple/public"
    }
  },
  "mediaTypeUrl": {
    "root": {
      "formats": {
        "json": "application/json",
        "jsonld": "application/ld+json",
        "nt": "application/n-triples",
        "ttl": "text/turtle",
        "xml": "application/rdf+xml"
      }
    }
  },
  "rewrite": {
    "root": {
      "mediaTypes": [
        "application/html",
        "application/ld+json",
        "application/n-triples",
        "application/rdf+xml",
        "application/xhtml+xml",
        "text/html",
        "text/turtle"
      ],
      "rewriteContent": true,
      "rewriteHeaders": true
    }
  },
  "renderer": {
    "root": {
      "module": "trifid-renderer-simple",
      "template": "trifid:views/index.html",
      "templateError": "trifid:views/error.html",
      "alternativeMediaTypes": [
        "application/ld+json",
        "application/n-triples",
        "application/rdf+xml",
        "text/turtle"
      ]
    }
  },
  "staticViews": {
    "/": "trifid:views/home.html"
  },
  "breakDown": {
    "rewrite": {},
    "rewrite.root": {},
    "rewrite.root.url": "datasetBaseUrl"
  },
  "plugins": {
    "templateEngine": {
      "priority": 10,
      "module": "trifid-plugin-cotton-candy"
    },
    "requestLogger": {
      "priority": 20,
      "module": "trifid-core:./plugins/middleware",
      "middleware": "morgan",
      "params": ["combined"]
    },
    "patchHeaders": {
      "priority": 40,
      "module": "trifid-core:./plugins/middleware",
      "middleware": "patch-headers"
    },
    "redirects": {
      "priority": 50,
      "module": "trifid-core:./plugins/redirects"
    },
    "staticFiles": {
      "priority": 60,
      "module": "trifid-core:./plugins/static-files"
    },
    "mediaTypeUrl": {
      "priority": 70,
      "module": "trifid-core:./plugins/middleware",
      "middleware": "format-to-accept"
    },
    "rewrite": {
      "priority": 80,
      "module": "trifid-core:./plugins/middleware",
      "middleware": "camouflage-rewrite"
    },
    "iri": {
      "priority": 90,
      "module": "trifid-core:./plugins/iri"
    },
    "locals": {
      "priority": 100,
      "module": "trifid-core:./plugins/locals"
    },
    "staticViews": {
      "priority": 110,
      "module": "trifid-core:./plugins/static-views"
    },
    "renderer": {
      "priority": 120,
      "module": "trifid-plugin-renderer"
    },
    "hydraBox": {
      "priority": 130,
      "module": "trifid-plugin-hydra-box"
    },
    "handler": {
      "priority": 140,
      "module": "trifid-core:./plugins/handler"
    },
    "headers-fix": {
      "priority": 150,
      "module": "trifid-core:./plugins/headers-fix"
    },
    "error-handler": {
      "priority": 160,
      "module": "trifid-core:./plugins/error-handler"
    }
  }
}
