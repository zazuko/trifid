{
  "name": "trifid-root",
  "private": true,
  "version": "0.0.0",
  "description": "Root package to handle all Trifid packages",
  "type": "module",
  "scripts": {
    "lint": "eslint . --quiet --ignore-path .gitignore",
    "test": "npm run test --workspaces",
    "release": "changeset publish",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix --quiet"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@tpluscode/eslint-config": "^0.4.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  }
}
