{
  "name": "trifid-root",
  "private": true,
  "version": "0.0.0",
  "description": "Root package to handle all Trifid packages",
  "type": "module",
  "license": "Apache-2.0",
  "scripts": {
    "lint": "eslint . --quiet --ignore-path .gitignore",
    "test": "npm run test --workspaces --if-present",
    "release": "changeset publish",
    "prepare": "husky",
    "build": "npm run prepack --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix --quiet"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@tpluscode/eslint-config": "^0.6.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "type-detect": "^4.1.0",
    "typescript": "^5.9.3"
  }
}
